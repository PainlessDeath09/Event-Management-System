        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Event_Management_System"
        mc:Ignorable="d"
        Title="Modify Event" Height="459" Width="348">
    <Grid>
        <Label Content="EventName:" HorizontalAlignment="Left" Margin="26,36,0,0" VerticalAlignment="Top"/>
        <Label Content="College:" HorizontalAlignment="Left" Margin="26,67,0,0" VerticalAlignment="Top"/>
        <Label Content="Event Time:" HorizontalAlignment="Left" Margin="26,98,0,0" VerticalAlignment="Top"/>
        <Label Content="EventID" HorizontalAlignment="Left" Margin="26,129,0,0" VerticalAlignment="Top"/>
